<h1><%= @event.name %></h1>

<ul>
  <li>Description : <%= @event.description %></li>
  <li>Location : <%= @event.venue %></li>
  <li>Seats Available : <%= @event.seats %></li>
  <li>Date & Time : <%= @event.date_time %></li>
  <li>Organized By : <%= @event.user.email %></li>
</ul>

<ul>
  <% if registered? %>
    <%= link_to "Unregister!", unregister_event_path(@event) %>
  <% elsif user_signed_in? %>
    <%= link_to "Register for this event", register_event_path(@event) %>
  <% else %>
    <%= link_to "Sign in to participate", new_user_session_path %>
  <% end %>
  <% if owner? %>
    <li><%= link_to "Edit", edit_event_path(@event) %></li>
    <li><%= link_to "Delete", @event, method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
  <li><%= link_to "Back to events", events_path %></li>
</ul>
